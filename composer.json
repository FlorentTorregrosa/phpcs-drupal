{
    "name": "florenttorregrosa/phpcs_drupal",
    "type": "phpcodesniffer-standard",
    "description": "Additional rules for Drupal coding standards.",
    "homepage": "https://github.com/FlorentTorregrosa/phpcs-drupal",
    "support": {
        "issues": "https://github.com/FlorentTorregrosa/phpcs-drupal/issues",
        "source": "https://github.com/FlorentTorregrosa/phpcs-drupal"
    },
    "keywords": [
        "phpcs",
        "standards",
        "code review"
    ],
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=7.1",
        "ext-mbstring": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "squizlabs/php_codesniffer": "^3.7.1",
        "symfony/yaml": ">=3.4.0"
    },
    "autoload": {
        "psr-4": {
            "FlorentTorregrosaDrupalPractice\\": "coder_sniffer/FlorentTorregrosaDrupalPractice/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "phpunit/phpunit": "^7.0 || ^8.0"
    }
}
